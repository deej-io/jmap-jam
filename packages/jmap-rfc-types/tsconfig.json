{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "Node16",
    "target": "ES2018",
    "moduleResolution": "Node16",
    "rewriteRelativeImportExtensions": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "verbatimModuleSyntax": true,
    "types": ["vitest/importMeta"]
  },
  "include": ["src/**/*"]
}

{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["unicorn", "typescript", "oxc", "import", "promise", "regex"],
  "jsPlugins": null,
  "categories": {
    "correctness": "error",
    "perf": "error",
    "suspicious": "error",
    "pedantic": "warn"
  },
  "rules": {
    // No max lines limit
    "max-lines": "allow",
    // Use `type` instead of `interface`
    "typescript/consistent-type-definitions": ["error", "type"],
    // No limit on dependency count
    "import/max-dependencies": "allow",
    // TOOD: Fix these gradually
    "typescript/no-unsafe-type-assertion": "warn"
  },
  "overrides": [
    // Permit longer functions in test files
    {
      "files": ["**/__test__/**"],
      "rules": {
        "max-lines-per-function": "allow"
      }
    },
    // Permit duplicate types for testing purposes
    {
      "files": ["*.test-d.ts"],
      "rules": {
        "typescript/no-duplicate-type-constituents": "allow"
      }
    }
  ],
  "settings": {
    "jsx-a11y": {
      "polymorphicPropName": null,
      "components": {},
      "attributes": {}
    },
    "next": {
      "rootDir": []
    },
    "react": {
      "formComponents": [],
      "linkComponents": []
    },
    "jsdoc": {
      "ignorePrivate": false,
      "ignoreInternal": false,
      "ignoreReplacesDocs": true,
      "overrideReplacesDocs": true,
      "augmentsExtendsReplacesDocs": false,
      "implementsReplacesDocs": false,
      "exemptDestructuredRootsFromChecks": false,
      "tagNamePreference": {}
    }
  },
  "env": {
    "builtin": true
  },
  "globals": {},
  "ignorePatterns": []
}
